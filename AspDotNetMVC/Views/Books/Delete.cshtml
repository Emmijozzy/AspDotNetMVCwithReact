@model AspDotNetMVC.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 py-8">
    <div class="max-w-3xl w-full bg-white p-6 shadow-md rounded-md">
        <div class="text-center mb-6">
            <h1 class="text-3xl font-semibold text-red-700">Delete Book</h1>
            <p class="mt-1 text-base text-gray-700">Are you sure you want to delete this book? This action cannot be undone.</p>
        </div>
        <div>
            <h4 class="text-lg font-medium text-gray-800 border-b border-gray-300 pb-2">Book Details</h4>
            <dl class="mt-4 grid grid-cols-1 gap-2">
                <div class="flex gap-2 py-2 border-b border-gray-200">
                    <dt class="text-gray-600">@Html.DisplayNameFor(model => model.Id):</dt>
                    <dd class="text-gray-900 font-medium">@Html.DisplayFor(model => model.Id)</dd>
                </div>
                <div class="flex gap-2 py-2 border-b border-gray-200">
                    <dt class="text-gray-600">@Html.DisplayNameFor(model => model.Title):</dt>
                    <dd class="text-gray-900 font-medium">@Html.DisplayFor(model => model.Title)</dd>
                </div>
                <div class="flex gap-2 py-2 border-b border-gray-200">
                    <dt class="text-gray-600">@Html.DisplayNameFor(model => model.Author):</dt>
                    <dd class="text-gray-900 font-medium">@Html.DisplayFor(model => model.Author)</dd>
                </div>
                <div class="flex gap-2 py-2 border-b border-gray-200">
                    <dt class="text-gray-600">@Html.DisplayNameFor(model => model.ISBN):</dt>
                    <dd class="text-gray-900 font-medium">@Html.DisplayFor(model => model.ISBN)</dd>
                </div>
                <div class="flex gap-2 py-2 border-b border-gray-200">
                    <dt class="text-gray-600">@Html.DisplayNameFor(model => model.PublicationDate):</dt>
                    <dd class="text-gray-900 font-medium">@Html.DisplayFor(model => model.PublicationDate)</dd>
                </div>
                <div class="flex gap-2 py-2 border-b border-gray-200">
                    <dt class="text-gray-600">@Html.DisplayNameFor(model => model.Description):</dt>
                    <dd class="text-gray-900 font-medium">@Html.DisplayFor(model => model.Description)</dd>
                </div>
                <div class="flex gap-2 py-2 border-b border-gray-200">
                    <dt class="text-gray-600">@Html.DisplayNameFor(model => model.NumberOfPages):</dt>
                    <dd class="text-gray-900 font-medium">@Html.DisplayFor(model => model.NumberOfPages)</dd>
                </div>
                <div class="flex gap-2 py-2 border-b border-gray-200">
                    <dt class="text-gray-600">@Html.DisplayNameFor(model => model.Genre):</dt>
                    <dd class="text-gray-900 font-medium">@Html.DisplayFor(model => model.Genre)</dd>
                </div>
                <div class="flex gap-2 py-2 border-b border-gray-200">
                    <dt class="text-gray-600">@Html.DisplayNameFor(model => model.Publisher):</dt>
                    <dd class="text-gray-900 font-medium">@Html.DisplayFor(model => model.Publisher)</dd>
                </div>
                <div class="flex gap-2 py-2 border-b border-gray-200">
                    <dt class="text-gray-600">@Html.DisplayNameFor(model => model.Language):</dt>
                    <dd class="text-gray-900 font-medium">@Html.DisplayFor(model => model.Language)</dd>
                </div>
            </dl>
        </div>
        <form asp-action="Delete" class="mt-6">
            <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                Delete Book
            </button>
            <div class="mt-3 text-center">
                <a asp-action="Index" class="text-sm font-medium text-indigo-600 hover:text-indigo-500">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
