@model IEnumerable<AspDotNetMVC.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<div class="mt-12">
    <p class="text-lg font-semibold text-slate-900">Book List</p>
    <a href="@Url.Action("Create", "Books")" class="mt-4 inline-flex items-center justify-center rounded-full py-2 px-4 text-sm font-semibold focus:outline-none focus-visible:outline-2 focus-visible:outline-offset-2 bg-slate-900 text-white hover:bg-slate-700 hover:text-slate-100 active:bg-slate-800 active:text-slate-300 focus-visible:outline-slate-900">Create New</a>
</div>

<div class="mt-6 overflow-x-auto">
    <table class="min-w-full divide-y divide-slate-200">
        <thead class="bg-slate-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Id</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Title</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Author</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">ISBN</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Publication Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Number of Pages</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Genre</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Publisher</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Language</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Actions</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-slate-200">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">@Html.DisplayFor(modelItem => item.Id)</td>
                    <td class="px-6 py-4 whitespace-nowrap">@Html.DisplayFor(modelItem => item.Title)</td>
                    <td class="px-6 py-4 whitespace-nowrap">@Html.DisplayFor(modelItem => item.Author)</td>
                    <td class="px-6 py-4 whitespace-nowrap">@Html.DisplayFor(modelItem => item.ISBN)</td>
                    <td class="px-6 py-4 whitespace-nowrap">@Html.DisplayFor(modelItem => item.PublicationDate)</td>
                    <td class="px-6 py-4 whitespace-nowrap">@Html.DisplayFor(modelItem => item.NumberOfPages)</td>
                    <td class="px-6 py-4 whitespace-nowrap">@Html.DisplayFor(modelItem => item.Genre)</td>
                    <td class="px-6 py-4 whitespace-nowrap">@Html.DisplayFor(modelItem => item.Publisher)</td>
                    <td class="px-6 py-4 whitespace-nowrap">@Html.DisplayFor(modelItem => item.Language)</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <a href="@Url.Action("Edit", "Books", new { id = item.Id })" class="text-indigo-600 hover:text-indigo-900">Edit</a> |
                        <a href="@Url.Action("Details", "Books", new { id = item.Id })" class="text-indigo-600 hover:text-indigo-900">Details</a> |
                        <a href="@Url.Action("Delete", "Books", new { id = item.Id })" class="text-indigo-600 hover:text-indigo-900">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>