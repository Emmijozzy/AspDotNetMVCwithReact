@model AspDotNetMVC.Models.Book

@{
    ViewData["Title"] = "Details";
}
<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-lg w-full bg-white p-8 shadow-md rounded-lg space-y-8">
        <div class="text-center">
            <h1 class="text-4xl font-extrabold text-gray-900">Book Details</h1>
        </div>
        <div>
            <h4 class="mt-4 text-center text-xl font-semibold text-gray-700">Book Information</h4>
            <hr class="my-4 border-t border-gray-300" />
            <dl class="grid grid-cols-1 gap-6">
                <div class="flex gap-2 border-b py-2">
                    <dt class="font-medium text-gray-600">@Html.DisplayNameFor(model => model.Id):</dt>
                    <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.Id)</dd>
                </div>
                <div class="flex gap-2 border-b py-2">
                    <dt class="font-medium text-gray-600">@Html.DisplayNameFor(model => model.Title):</dt>
                    <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.Title)</dd>
                </div>
                <div class="flex gap-2 border-b py-2">
                    <dt class="font-medium text-gray-600">@Html.DisplayNameFor(model => model.Author):</dt>
                    <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.Author)</dd>
                </div>
                <div class="flex gap-2 border-b py-2">
                    <dt class="font-medium text-gray-600">@Html.DisplayNameFor(model => model.ISBN):</dt>
                    <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.ISBN)</dd>
                </div>
                <div class="flex gap-2 border-b py-2">
                    <dt class="font-medium text-gray-600">@Html.DisplayNameFor(model => model.PublicationDate):</dt>
                    <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.PublicationDate)</dd>
                </div>
                <div class="flex gap-2 border-b py-2">
                    <dt class="font-medium text-gray-600">@Html.DisplayNameFor(model => model.Description):</dt>
                    <dd class="text-gray-900 font-semibold overflow-x-auto">@Html.DisplayFor(model => model.Description):</dd>
                </div>
                <div class="flex gap-2 border-b py-2">
                    <dt class="font-medium text-gray-600">@Html.DisplayNameFor(model => model.NumberOfPages):</dt>
                    <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.NumberOfPages)</dd>
                </div>
                <div class="flex gap-2 border-b py-2">
                    <dt class="font-medium text-gray-600">@Html.DisplayNameFor(model => model.Genre):</dt>
                    <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.Genre)</dd>
                </div>
                <div class="flex gap-2 border-b py-2">
                    <dt class="font-medium text-gray-600">@Html.DisplayNameFor(model => model.Publisher):</dt>
                    <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.Publisher)</dd>
                </div>
                <div class="flex gap-2 py-2">
                    <dt class="font-medium text-gray-600">@Html.DisplayNameFor(model => model.Language):</dt>
                    <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.Language)</dd>
                </div>
            </dl>
            <div class="relative mt-6 flex justify-center items-center gap-4">
                <a href="@Url.Action("Edit", new { id = Model.Id })" class="w-1/2 text-indigo-600 font-medium hover:text-indigo-500">
                    <button class="w-full px-6 py-2 bg-slate-900 rounded-lg text-white hover:bg-slate-700">
                        Edit
                    </button>
                </a>
                <a asp-action="Index" class="w-1/2 text-indigo-600 font-medium hover:text-indigo-500">
                    <button class="w-full px-6 py-2 bg-slate-900 rounded-lg text-white hover:bg-slate-700">
                        Back
                    </button>
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
